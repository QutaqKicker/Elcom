<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body>
    <div class="container shadow p-3 rounded" id="authorizationBlock">
        <div class="row justify-content-center">
            <div class="col-8">
                <h4>Добро пожаловать в CMacros!</h4>
            </div>
        </div>
        @ViewBag.Message
        <div class="row justify-content-center">
            <div class="col-8">
                <form action="/Home/Login" method="post">
                    <div class="form-group">
                        <label for="loginput">Ваш логин:</label>
                        <input name="login" type="text" class="form-control" placeholder="логин" id="loginput" value="login" required>
                    </div>
                    <div class="form-group">
                        <label for="passinput">Ваш пароль: </label>
                        <input name="password" class="form-control" type="password" id="passinput" placeholder="пароль" value="password" required>
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Войти</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>