@using System.Data
@model DataTable;

<table class="contentTable" style="display: block;">
    <thead>
        <tr>
            <th>№</th>
            @foreach (DataColumn col in @Model.Columns)
            {
                <th>@col.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @{ var i = 0; }
        @foreach (DataRow row in @Model.Rows)
        {
            <tr>
                <td>@(++i)</td>
                @foreach (var item in row.ItemArray)
                {
                    <td>@item.ToString()</td>
                }
            </tr>
        }
    </tbody>
</table>